{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": false,
    "lib": [
      "es2018",
      "dom"
    ],
    "noImplicitAny": false,
    "useDefineForClassFields": true,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "package/",
    "paths": {
      "@tanbo/react-di": [
        "src/public-api.ts"
      ]
    },
    "jsx": "react",
    "jsxFactory": "React.createElement"
  },
  "include": [
    "src/*"
  ]
}
